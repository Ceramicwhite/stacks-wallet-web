{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": ["dom", "dom.iterable", "esnext"],
    "jsx": "react",
    "sourceMap": true,
    "removeComments": true,
    "noEmit": false,
    "importHelpers": true,
    "downlevelIteration": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "@store/*": ["../src/store/*"],
      "@store": ["../src/store/index"],
      "@components/*": ["../src/components/*"],
      "@containers/*": ["../src/containers/*"],
      "@common/*": ["../src/common/*"],
      "@screen": ["../src/components/screen/index"],
      "@background/*": ["../src/background/*"],
      "@content-scripts/*": ["../src/content-scripts/*"],
      "@inpage/*": ["../src/inpage/*"],
      "@pages/*": ["../src/pages/*"],
      "@features/*": ["../src/features/*"],
      "@tests/*": ["../../tests/*"],
      "@tests": ["../../tests"]
    },
    "baseUrl": "src",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "types": ["jest", "chrome"]
  },
  "include": ["./src/**/*", "./tests/**/*"],
  "exclude": ["test-app"]
}
